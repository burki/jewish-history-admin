{
    "config": {
       "vendor-dir": "lib/",
        "platform": {
            "php": "5.4.45"
        },
        "secure-http" : false
    },

    "repositories": [
        {
            "type": "pear",
            "url": "https://pear.php.net"
        },
        {
            "url": "https://github.com/pear/Text_Wiki.git",
            "type": "vcs"
        },
        {
            "url": "https://github.com/burki/zotero-api",
            "type": "git"
        }
    ],

    "require" : {
        "php": ">=5.4.0",

        "swiftmailer/swiftmailer": "~5.0",

        "zendframework/zendframework1": "~1.12",
        "cocur/slugify": "~1.0",
        "semsol/arc2": "@stable",
        "easyrdf/easyrdf": "~0.9",
        "ml/json-ld": "~1.0",
        "kriswallsmith/buzz": "@stable",
        "sabre/xml": "@stable",

        "pear-pear.php.net/PEAR": "*",
        "pear-pear.php.net/XML_Util": "*",
        "pear/text_wiki": "*@dev",

        "burki/zotero-api": "dev-master",
        "sabre/dav": "~3.0"
    },

    "autoload": {
        "psr-4": { "OxGarage\\": "lib/OxGarage/" }
    }
}
